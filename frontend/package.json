{
	"name": "ft_transcendense",
	"version": "1.0.0",
	"scripts": {
		"build": "npx esbuild src/main.ts --bundle --outfile=./public/bundle.js",
		"tailwind": "tailwindcss -i ./src/input.css -o ./public/output.css",
		"hot-reload": "npm i && nodemon --watch ./src -e ts --exec 'npm run build && npm run tailwind'"
	},
	"type": "module",
 	"dependencies": {
		"@tailwindcss/cli": "^4.1.3",
		"tailwindcss": "^4.1.3"
	},
	"devDependencies": {
		"esbuild": "^0.25.1",
		"typescript": "^5.0.0"
	}
}
